{
    "name": "zippy1981/php-routing-example",
    "description": "Example of custom PHP routing",
    "type": "project",
    "config": {
        "platform": {
            "php": "7.3.4"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Justin Dearing",
            "email": "zippy1981@gmail.com"
        }
    ],
    "require": {},
    "require-dev": {
        "overtrue/phplint": "^1.1",
        "phpmd/phpmd" : "@stable",
        "phpunit/phpunit": "^8.1",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Router\\": "src/"
        }
    },
    "scripts": {
        "cs-check": "phpcs src/ public/",
        "cs-fix": "phpcbf src/ public/",
        "phpmd": "phpmd src/,public/ text codesize,cleancode,design,naming",
        "lint": "phplint",
        "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
    }
}
